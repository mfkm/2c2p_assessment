@page
@model UploaderModel
@{
    ViewData["Title"] = "File Uploader";
}

<div class="text-center" ng-controller="UploadController">
    <h1 class="display-4">File Uploader</h1>
    <form class="row" ng-submit="uploadFile(fileData)">
        <div class="col-lg-12">
            <div ng-show="finalResult.Message" ng-class="finalResult.IsSuccess ? 'alert alert-success' : 'alert alert-danger'" role="alert">
                {{finalResult.Message}}
            </div>
        </div>
        <div class="col-lg-10">
            <div class="form-group">
                <input type="file" class="form-control" ng-model="fileData" base-sixty-four-input required />
            </div>
        </div>
        <div class="col-lg-2">
            <button type="submit" class="btn btn-success">Upload</button>
        </div>
    </form>

</div>